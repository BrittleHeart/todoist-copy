{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "types": ["node", "jest"],
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist/",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["./app/*"],
      "@database/*": ["./database/*"],
      "@config/*": ["./config/*"],
      "@server": ["./server.ts"]
    }
  },
}